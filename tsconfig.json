{
  "compilerOptions": {
    "module": "commonjs",  // Suitable for Node.js environments
    "target": "es6",  // Or higher, depending on Node.js version
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}

